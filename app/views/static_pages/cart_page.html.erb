<div class="row">
  <div class="col-sm-offset-2 col-sm-9 li-styling">
<div class="col-md-5 cart-show">
    <h2>Your Albums</h2>  
<% if !@albums.nil? %>
<% @albums.each do |album| %>
  <% if (album.order_items.last.nil? || !album.order_items.last.order.payment_status) && !album.songs.last.nil?%>
    <ul class="your-albums">
      <div class="row">
        <div class="col-md-9">
          <span class="album_index_name"> <%= link_to album.album_name, album_song_path(album) %></span>
        </div>
        <div class="col-md-offset-1 col-md-2">
          <%= link_to ">>", order_items_path(:album_id => album.id), method: :post, remote: :true, :class => "album_index_name, add_to_order" %>      
        </div>
      </div>
    </ul>
  <% end %>
<% end %>
<% else %>
  <%= raw("Please create an album, and upload songs in it.") %>
<% end %>
</div>
<div class="col-md-offset-1 col-md-5 cart-show">
    <h2>Cart</h2>  
    <div class="render-cart">
      <%= render "cart_show" %>
    </div>
</div>    
  </div>
</div>
<br>
