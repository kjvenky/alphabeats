<% if !current_order.order_items.nil? %>
  <% @total = 0 %>
  <% current_order.order_items.each do |order_item| %>
    <% if order_item.album.songs.count==1 %>
      <% @total = @total+12 if !order_item.album.songs.last.self_written %> 
      <% @total = @total+0.99 if order_item.order.shazam %> 
      <% @total = @total+4.95 if order_item.order.youtube %> 
      <% @total = @total+7.95 if order_item.order.store_maximizer %> 
    <% elsif order_item.album.songs.count!=1 %>
      <% order_item.album.songs.each do |song| %>
        <% @total = @total+12 if !song.self_written %> 
      <% end %>
      <% @total = @total+0.99 if order_item.order.shazam %> 
      <% @total = @total+14.95 if order_item.order.youtube %> 
      <% @total = @total+7.95 if order_item.order.store_maximizer %> 
    <% end %>
  <% end %>
  Total: <%= @total %>
<% end %>




