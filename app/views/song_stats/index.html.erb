<p id="notice"><%= notice %></p>

<h1>Listing Song Stats</h1>
<p>
  Download:
    <%= link_to "CSV", song_stats_path(format: "csv") %> 
</p>

<table class="table-condensed" >
  <thead>
    <tr>
      <th>Reporting date</th>
      <th>Sale month</th>
      <th>Store</th>
      <th>Artist</th>
      <th>Title</th>
      <th>Quantity</th>
      <th>Song album</th>
      <th>Customer paid</th>
      <th>Customer currency</th>
      <th>Country of sale</th>
      <th>Royalties withheld</th>
      <th>Earnings</th>
      <th>Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @song_stats.each do |song_stat| %>
      <tr>
        <td><%= song_stat.reporting_date %></td>
        <td><%= song_stat.sale_month %></td>
        <td><%= song_stat.store %></td>
        <td><%= song_stat.artist %></td>
        <td><%= song_stat.title %></td>
        <td><%= song_stat.quantity %></td>
        <td><%= song_stat.song_album %></td>
        <td><%= song_stat.customer_paid %></td>
        <td><%= song_stat.customer_currency %></td>
        <td><%= song_stat.country_of_sale %></td>
        <td><%= song_stat.songwriter_royalties_withheld %></td>
        <td><%= song_stat.earnings %></td>
        <td><%= song_stat.song_id %></td>
        <td><%= link_to 'Show', song_stat %></td>
        <td><%= link_to 'Edit', edit_song_stat_path(song_stat) %></td>
        <td><%= link_to 'Destroy', song_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song stat', new_song_stat_path %>


<h2>Import Song Stats</h2>
<%= form_tag import_song_stats_path, multipart: true %>
  <%= file_field_tag :file, input_html: {class: 'input input-style form-control'} %>
  <br/>
<%= submit_tag "Import", class: 'btn btn-transparent btn-sm' %>
