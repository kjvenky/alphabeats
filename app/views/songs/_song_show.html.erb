<div class="row">
  <div class="col-sm-offset-1 col-sm-10 album-show">
    <h1><%= song.song_title %> 
    
    <% if can? :create, Song %>
      <%= link_to "Edit", edit_song_path(song) %>
    <% end %>
    </h1>
    <div class="col-sm-5">
      <h5 class='low-opacity-font' >Song Title</h5>
      <%= song.song_title %> <br/>

      <h5 class='low-opacity-font' >Song Writer</h5>
      <% if song.self_written %>
        <%= raw("Self Written") %>
      <% else %>
        <%= raw("Original artist:") %>
        <%= song.original_artist %>
        <br/>
        <%= raw("Original song title:") %>
        <%= song.original_song_title %>
      <% end %>

       
        <br/>

      <h5 class='low-opacity-font' >Album Name</h5>
      <%= song.album.album_name %> <br/>

      <% if !song.duration.nil? && !song.duration==Time.utc(2000,01,01,00,00,00) %>
        <%= raw("<h5 class='low-opacity-font' >Song Duration</h5>") %>
        <%= song.duration.strftime("%H:%M") if !song.duration.nil? && !song.duration==Time.utc(2000,01,01,00,00,00) %> <br/>
      <% end %>

      <% if can? :create, Song %>
        <%= raw("<h5 class='low-opacity-font' >Link to Song</h5>") %>
        <%= song.audio_file %> <br/>

        <%= raw("<h5 class='low-opacity-font' >Note to Admin</h5>") %>
        <%= song.note_to_admin %> <br/>

      <% end %>

      <h5 class='low-opacity-font' >Explicit Lyrics</h5>
      <% if song.explicit_lyrics %>
        <%= raw("Yes") %>
      <% else %>
        <%= raw("No") %>
      <% end %>
      
      <% if song.producer.present? %>
        <%= raw("<h5 class='low-opacity-font' >Producer</h5>") %>
        <%= song.producer %>
      <% end %>

      <% if song.producer_email.present? %>
        <%= raw("<h5 class='low-opacity-font' >Producer Email</h5>") %>
        <%= song.producer_email %>
      <% end %>

        <br/>
        <br/>

    </div>
    <div class="col-sm-7">
      <h5 class='low-opacity-font' >Lyrics of the song</h5>
      <div id="lyrics-show">
      <%= song.lyrics %> <br/>
      </div>
    </div>
  </div><!-- end col-sm-offset-1 col-sm-10 album-show -->

      <br/><br/>
  <div class="col-sm-offset-1 col-sm-10">
      <h3>Links of the song to different services</h3> 
    <div class="col-sm-5">
      <% if song.spotify.present? %>
        <%= raw("<a target='_blank' href='#{song.spotify}'><h5 class='low-opacity-font' >Spotify</h5></a>") %>
      <% end %>
      <% if song.itunes.present? %>
        <%= raw("<a target='_blank' href='#{song.itunes}'><h5 class='low-opacity-font' >iTunes</h5></a>") %>
      <% end %>
      <% if song.apple_music.present? %>
        <%= raw("<a target='_blank' href='#{song.apple_music}'><h5 class='low-opacity-font' >Apple Music</h5></a>") %>
      <% end %>
      <% if song.google_play.present? %>
        <%= raw("<a target='_blank' href='#{song.google_play}'><h5 class='low-opacity-font' >Google Play</h5></a>") %>
      <% end %>
      <% if song.amazon.present? %>
        <%= raw("<a target='_blank' href='#{song.amazon}'><h5 class='low-opacity-font' >Amazon</h5></a>") %>
      <% end %>
      <% if song.r_dio.present? %>
        <%= raw("<a target='_blank' href='#{song.r_dio}'><h5 class='low-opacity-font' >Rdio</h5></a>") %>
      <% end %>
      <% if song.deezer.present? %>
        <%= raw("<a target='_blank' href='#{song.deezer}'><h5 class='low-opacity-font' >Deezer</h5></a>") %>
      <% end %>
      <% if song.tidal.present? %>
        <%= raw("<a target='_blank' href='#{song.tidal}'><h5 class='low-opacity-font' >Tidal</h5></a>") %>
      <% end %>
      <% if song.youtube.present? %>
        <%= raw("<a target='_blank' href='#{song.youtube}'><h5 class='low-opacity-font' >Youtube Music</h5></a>") %>
      <% end %>
      <br/><br/>
      <% if song.view_count.present? %>
        <%= raw("<h5 class='low-opacity-font' >View Count: #{song.view_count}</h5>") %>
      <% end %>
      <% if song.download_count.present? %>
        <%= raw("<h5 class='low-opacity-font' >Download Count: #{song.download_count}</h5>") %>
      <% end %>
      <% if song.income_till_date.present? %>
        <%= raw("<h5 class='low-opacity-font' >Income till date: #{song.income_till_date}</h5>") %>
      <% end %>
    </div>
  </div>

</div> <!-- end row -->


